<html>
<head>
    <title>The Great Good Place</title>
	<link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/v2.2.0/mapbox.css'>
    <link rel='stylesheet' href='../public/stylesheets/foundation.css'>
    <!-- <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"> -->
    <link rel='stylesheet' href='../public/stylesheets/core.css'>
</head>

<body>
    <!-- Header -->
    <nav id="header" class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
          <h1><a href="/">The Great Good Place</a></h1>
        </li>
      </ul>

      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
          <li>
              <a class="greeting">Greetings!</a>
          </li>
          <li>
              <a class="newPub">Start Pub</a>
          </li>
          <li>
            <a class="login" data-reveal-id="loginModal">Login</a>
            <div id="loginModal" class="reveal-modal tiny" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
              <h3 class='text-center'>Login</h3>
                  <div class="row">
                        <div id='modalMenu' class="small-12 columns text-center">
                            <a id='locationButton' class="button radius">Location</a>
                            <input id='name' type='text' placeholder="Username">
                            <input id='color' type='text' placeholder="Color (hex value)">
                            <a id='login' class="button radius">Go</a>
                        </div>
                  </div>
              <a class="close-reveal-modal" aria-label="Close">&#215;</a>
            </div>
          </li>
          <li>
              <a class="logout" href='/logout'>Logout</a>
          </li>
        </ul>
      </section>
    </nav>

    <!-- Map -->
    <div id='map' class="flex-video"></div>

    <!-- Chat -->
    <div id='chat'>
        <br>

        <div class="row">
         <div class="large-12 columns">
           <div class="panel">
             <h1 class="pubTitle">Welcome to <%= name %></h1>
           </div>
         </div>
        </div>

        <div class="row">
         <div class="large-3 columns ">
           <div class="panel">
             <h5><a href="#">Your Name</a></h5>
               <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
               <section class="section">
                 <h5 class="title"><a href="#">Section 1</a></h5>
               </section>
               <section class="section">
                 <h5 class="title"><a href="#">Section 2</a></h5>
               </section>
               <section class="section">
                 <h5 class="title"><a href="#">Section 3</a></h5>
               </section>
               <section class="section">
                 <h5 class="title"><a href="#">Section 4</a></h5>
               </section>
               <section class="section">
                 <h5 class="title"><a href="#">Section 5</a></h5>
               </section>
               <section class="section">
                 <h5 class="title"><a href="#">Section 6</a></h5>
               </section>
             </div>
           </div>
         </div>

         <div class="large-9 columns chat">
              <div class="row">
                  <div class="large-2 columns">
                      <button class="msg-submit" type="submit">Submit</button>
                  </div>
                  <div class="large-10 columns">
                      <input class="msg-box" type="text" />
                  </div>
              </div>

              <ul class="msg-list">

              </ul>
          </div>
        </div>

        <footer class="row">
         <div class="large-12 columns">
           <hr/>
           <div class="row">
             <div class="large-5 columns">
               <p>Â© Copyright</p>
             </div>
             <div class="large-7 columns">
               <ul class="inline-list right">
                 <li><a href="#">Section 1</a></li>
                 <li><a href="#">Section 2</a></li>
                 <li><a href="#">Section 3</a></li>
                 <li><a href="#">Section 4</a></li>
                 <li><a href="#">Section 5</a></li>
                 <li><a href="#">Section 6</a></li>
               </ul>
             </div>
           </div>
         </div>
        </footer>
    </div>

    <!-- JavaScripts  -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.2.0/mustache.min.js'></script>
	<script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js'></script>
	<script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.2.3/backbone-min.js'></script>
    <script type="text/javascript" src='https://api.tiles.mapbox.com/mapbox.js/v2.2.0/mapbox.js'></script>
    <script type="text/javascript" src="https://cdn.socket.io/socket.io-1.3.7.js"></script>
    <script type="text/javascript" src='../public/javascripts/modernizr.js'></script>
    <script type="text/javascript" src='../public/javascripts/foundation.js'></script>
    <script type="text/javascript" src='../public/javascripts/foundation.reveal.js'></script>
    <!-- <script type="text/javascript" src='../public/javascripts/core.js'></script> -->
    <script type="text/javascript" src='../public/javascripts/socketchat.js'></script>
    <script type="text/javascript" src='../public/javascripts/BBheader.js'></script>
    <script type="text/javascript" src='../public/javascripts/BBchat.js'></script>
    <script type="text/javascript" src='../public/javascripts/BBmap.js'></script>
</body>
</html>
