	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js"></script>
	<script src='https://api.tiles.mapbox.com/mapbox.js/v2.2.0/mapbox.js'></script>
	<link rel='stylesheet' href='https://api.tiles.mapbox.com/mapbox.js/v2.2.0/mapbox.css'>
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
	<link rel='stylesheet' href='http://yui.yahooapis.com/pure/0.6.0/pure-min.css'>

	<!-- Internal Resources -->

	<script src="/public/javascripts/header.js"></script>

</head>

<body>
	<div class='container' style="background-color:#81963D">

		<div class="header" style="height:9%; box-shadow: 0px 3px 5px black">
			<span style="position:relative; top:50%; transform:translateY(-50%); margin-left:20px;float: left;">The Great Good Place</span>
			<% if (name != 'guest') { %>
				<span style="position:relative; top:50%; transform:translateY(-50%); margin-right:20px; float: right;"><a id='logout' href='/logout'>Logout</a></span>
			<% } %>
			<span style="position:relative; top:50%; transform:translateY(-50%); margin-right:20px; float: right;"><a id='about' href='/about'>About</a></span>
		</div>

		<div id="map" style="width:100%; height:91%; position:absolute; z-index: -1;"></div>

		<div id="loginmenu" style="top:40%; transform:translateY(-60%); width:20%; display:block; margin-left:40%; position:absolute;
					z-index:1; text-align:center; background-color:#AFC46A; box-shadow:0 0 1em black;">

			<% if (name == 'guest') { %>
				<p>Welcome, friend!</p>
			<% } else { %>
				<p>Welcome, <%= name %>!</p>
			<% } %>

			<style scoped>
				.button-primary {
				    background: rgb(81, 97, 30); /* this is a dark green */
				    color: white;
				    border-radius: 4px;
				    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
				}
				.button-tertiary {
				    background: rgb(238, 102, 48); /* this is an orange */
				    color: white;
				    border-radius: 4px;
				    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
				}
				.pure-menu-item {
				    padding: 5px;
				}
			</style>

			<% if (name == 'guest') { %>
				<div class="pure-menu">
					<div class="pure-menu-list">
						<li class="pure-menu-item" id="locateli"><a class="button-primary pure-button" id='locate'><i class="fa fa-thumb-tack"></i> Locate</a></li>
						<li class="pure-menu-item"><a class="button-primary pure-button" id='name'><i class="fa fa-globe"></i> Name</a></li>
						<li class="pure-menu-item"><a class="button-primary pure-button" id='color'><i class="fa fa-plus-square"></i> Color</a></li>
						<li class="pure-menu-item"><a class="button-tertiary pure-button" id='login'>Go</a></li><br \>
					</div>
				</div>
			<% } else { %>
				<div class="pure-menu">
					<div class="pure-menu-list">
						<li class="pure-menu-item" id="locateli"><a class="button-primary pure-button" id='locate'><i class="fa fa-thumb-tack"></i>Re-Locate</a></li>
						<li class="pure-menu-item"><a class="button-primary pure-button" id='color'><i class="fa fa-plus-square"></i> Color</a></li>
						<li class="pure-menu-item"><a class="button-tertiary pure-button" id='login'>Go</a></li><br \>
					</div>
				</div>
			<% } %>

		</div>

		<!-- Map and associated script -->
		<script src="/public/javascripts/map.js"></script>

	</div>

</body>
</html>
